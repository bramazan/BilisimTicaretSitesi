
@{
    ViewBag.Title = "MarkaEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@E_ticaret.Resources.lang.markaekle</h2>


@{
    Layout =null;
}

<link href="~/assets/plugins/form-datepicker/css/datepicker.css" rel="stylesheet" />
<script src="~/assets/plugins/form-datepicker/js/bootstrap-datepicker.js"></script>

@model E_ticaret.Models.Marka

<div class="row">
    <div class="col-sm-12">
        @using (Html.BeginForm("MarkaEkle", "Admin", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
           
            <div class="row">
                <div class="form-horizontal">
                    @Html.ValidationSummary()
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">@E_ticaret.Resources.lang.foto</label>
                            <div class="col-sm-10">
                                <input type="file" name="file" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">@E_ticaret.Resources.lang.markaad</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.markaadi, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">@E_ticaret.Resources.lang.markahakkinda</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.aciklama, new { @class = "form-control"})
                            </div>
                        </div>
                    </div>
                    @*<div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Bitiş Tarihi</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.bitistarihi, new { @class = "form-control", style = "width:250px;" })
                            </div>
                        </div>
                    </div>*@
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-9 col-sm-offset-3">
                        <div class="btn-toolbar pull-right">
                            <input type="submit" value=@E_ticaret.Resources.lang.kaydet class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#bitistarihi").datepicker({ dateFormat: 'DD.MM.YYYY' });
        $("#bitistarihi").datepicker('setDate', new Date());
        $("#baslangictarihi").datepicker({ dateFormat: 'DD.MM.YYYY' });
        $("#baslangictarihi").datepicker('setDate', new Date());
    });
</script>






