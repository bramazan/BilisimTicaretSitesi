@{
   
    Layout = null;
}

<link href="~/assets/plugins/form-datepicker/css/datepicker.css" rel="stylesheet" />
<script src="~/assets/plugins/form-datepicker/js/bootstrap-datepicker.js"></script>

@model E_ticaret.Models.Slider

<div class="row">
    <div class="col-sm-12">
        @using (Html.BeginForm("SlideEkle", "Admin", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">@E_ticaret.Resources.lang.foto</label>
                            <div class="col-sm-10">
                                <input type="file" name="file" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">@E_ticaret.Resources.lang.aciklama</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.slidertext, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">@E_ticaret.Resources.lang.ilktarih</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.baslangictarihi,new { @class = "form-control", style = "width:250px;" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">@E_ticaret.Resources.lang.sontarih</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.bitistarihi, new { @class = "form-control", style = "width:250px;" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-9 col-sm-offset-3">
                        <div class="btn-toolbar pull-right">
                            <input type="submit" value=@E_ticaret.Resources.lang.kaydet class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#bitistarihi").datepicker({ dateFormat: 'DD.MM.YYYY' });
        $("#bitistarihi").datepicker('setDate', new Date());
        $("#baslangictarihi").datepicker({ dateFormat: 'DD.MM.YYYY' });
        $("#baslangictarihi").datepicker('setDate', new Date());
    });
</script>





