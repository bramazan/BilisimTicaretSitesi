
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>KategoriEkle</h2>


@{

    Layout = null;
}

<link href="~/assets/plugins/form-datepicker/css/datepicker.css" rel="stylesheet" />
<script src="~/assets/plugins/form-datepicker/js/bootstrap-datepicker.js"></script>

@model E_ticaret.Models.Kategori

<div class="row">
    <div class="col-sm-12">
        @using (Html.BeginForm("KategoriEkle", "Admin", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="form-horizontal">
                    
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Kategori Adı</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.kategoriadi, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Kategori ID</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.anakategoriId, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    @*<div class="form-group">
                            <div class="col-md-12">
                                <label class="col-sm-2 control-label">Bitiş Tarihi</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.bitistarihi, new { @class = "form-control", style = "width:250px;" })
                                </div>
                            </div>
                        </div>*@
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-9 col-sm-offset-3">
                        <div class="btn-toolbar pull-right">
                            <input type="submit" value="Kaydet" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#bitistarihi").datepicker({ dateFormat: 'DD.MM.YYYY' });
        $("#bitistarihi").datepicker('setDate', new Date());
        $("#baslangictarihi").datepicker({ dateFormat: 'DD.MM.YYYY' });
        $("#baslangictarihi").datepicker('setDate', new Date());
    });
</script>






