@{

    Layout = null;
}

<link href="~/assets/plugins/form-datepicker/css/datepicker.css" rel="stylesheet" />
<script src="~/assets/plugins/form-datepicker/js/bootstrap-datepicker.js"></script>

@model E_ticaret.Models.Uyeler

<div class="row">
    <div class="col-sm-12">
        @using (Html.BeginForm("AdminEkle", "Admin", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="form-horizontal">

                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Rol</label>
                            <div class="col-sm-10">
                               @Html.DropDownList("rolId", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                   
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Adınız</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.ad, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Soyadınız</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.soyad, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Cinsiyet</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.cinsiyet, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Telefon No</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.telefon, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">E-Mail</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.email, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Parola</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.parola, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">T.C</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.tc, new { @class = "form-control", style = "width:250px;" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Guvenlik Soru</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.guvenliksorusu, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Guven Cevap</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.guvenliksorusucevap, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Kayıt Tarihi</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.kayittarihi, new { @class = "form-control", style = "width:250px;" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-sm-2 control-label">Adres</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.adres, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-9 col-sm-offset-3">
                        <div class="btn-toolbar pull-right">
                            <input type="submit" value="Kaydet" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#kayittarihi").datepicker({ dateFormat: 'DD.MM.YYYY' });
        $("#kayittarihi").datepicker('setDate', new Date());
        $("#baslangictarihi").datepicker({ dateFormat: 'DD.MM.YYYY' });
        $("#baslangictarihi").datepicker('setDate', new Date());
    });
</script>





