@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    #wrapper {
        width: 100%;
        height: 100%;
        position: fixed;
        top: 0;
        left: 0;
        background: rgba(0, 0, 0, .5);
        z-index: 9999;
    }
    /*mesaj gönderildi penceresi*/
    #message-sent {
        width: 340px;
        height: 60px;
        line-height: 60px;
        text-align: center;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-top: -30px;
        margin-left: -170px;
        font-weight: 600;
        border-radius: 0 16px;
        color: #191970;
        background: white;
        box-shadow: 0 0 20px 4px #0d6636;
    }
    /*kapatma dügmesi*/
    #close-button {
        width: 18px;
        height: 18px;
        line-height: 18px;
        text-align: center;
        position: absolute;
        top: -8px;
        right: -8px;
        background: white;
        border-radius: 0 8px;
        border: 1px solid #0d6636;
        cursor: pointer;
        font-weight: 600;
    }
</style>

<div class="content-text">

    <div class="content-text">
        <h2>@E_ticaret.Resources.lang.nerede</h2>
        <div id="google-maps">
            <iframe width="800" height="420" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d3022.490606547845!2d30.352655!3d40.751233!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14ccb2790017a929%3A0x254d3ac88a59aa33!2s%C3%9Cniversite+Cd%2C+Kemalpa%C5%9Fa+Mh.%2C+54000+Sakarya%2C+T%C3%BCrkiye!5e0!3m2!1str!2s!4v1430177520622"></iframe> width="600" height="450" frameborder="0" style="border:0"></iframe> style="color:#0000FF;text-align:left">Daha Büyük Görüntüle</a></small>
        </div>
        <h2>@E_ticaret.Resources.lang.Cistek</h2>
        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "contact-form", action = "" }))
        {
            if (ViewBag.Success != null && ViewBag.Success)
            {
                <div id="wrapper">
                    <div id="message-sent">
                        <div id="close-button">
                            <span>X</span>
                        </div>
                        <span>@E_ticaret.Resources.lang.Cmesaj</span>
                    </div>
                </div>
            }

            <div class="contact-line">
                <button class="obligation-button" type="button">
                    <span>@E_ticaret.Resources.lang.Cgerekli</span>
                </button>
            </div>
            <div class="contact-line">
                <div class="contact-col1">
                    <span>Takma Ad</span>
                </div>
                <div class="contact-col2">
                    <input type="text" class="input" id="input-nickname" name="NickName" required />
                </div>
            </div>
            <div class="contact-line contact-line-unrequired">
                <div class="contact-col1">
                    <span>Ad- Soyad</span>
                </div>
                <div class="contact-col2">
                    <input type="text" class="input" name="FullName" />
                </div>
            </div>
            <div class="contact-line">
                <div class="contact-col1">
                    <span>e-Posta</span>
                </div>
                <div class="contact-col2">
                    <input type="email" class="input" id="input-email" name="Email" required />
                </div>
            </div>
            <div class="contact-line contact-line-unrequired">
                <div class="contact-col1">
                    <span>Tel</span>
                </div>
                <div class="contact-col2">
                    <input type="tel" class="input" name="Phone" />
                </div>
            </div>
            <div class="contact-line message">
                <div class="contact-col1">
                    <span>İleti</span>
                </div>
                <div class="contact-col2">
                    <textarea class="textarea" id="input-text" name="Message" required></textarea>
                </div>
            </div>
            <div class="contact-line">
                <button type="submit" class="contact-button" onclick="formEksikMi()">
                    <span>@E_ticaret.Resources.lang.gonder</span>
                </button>
            </div>
        }
    </div>
</div>
<script>
    $(document).ready(function () {
        $(".obligation-button").click(function () {
            $(".contact-line-unrequired").slideToggle();
        });
    });

    function formEksikMi() {
        var rumuzDegeri = document.getElementById("input-nickname").value;
        var epostaDegeri = document.getElementById("input-email").value;
        var iletiDegeri = document.getElementById("input-text").value;
        if (rumuzDegeri === "" || iletiDegeri === "" || epostaDegeri === "") {
            alert("Lütfen gerekli alanlari doldurunuz.");
            return false;
        }
    }
</script>
<script>
    $('#wrapper').click(function () {
        $(this).fadeOut('slow');
    });
</script>
