                                                            <a href="product_details.html">
                                                                <img style='width:100%; height:100%; max-height:400px;'><img src="data:image/png;base64,@System.Convert.ToBase64String(Model.kampanyaSlider[i * 4 + j].kampanyagorseli)">
                                                            </a>
