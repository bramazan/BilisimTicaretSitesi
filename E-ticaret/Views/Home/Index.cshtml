                    <div class="caption">
                        <h5>@item.urunadi</h5>
                        <h4 style="text-align:center"><a class="btn" href="product_details.html"> <i class="icon-zoom-in"></i></a> <a class="btn" href="#">EKLE <i class="icon-shopping-cart"></i></a> <a class="btn btn-primary" href="#"><h7>@item.urunfiyat ₺</h7></a></h4>
                    </div>
                </div><br />
                
    
}
